<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/frame_signature_click_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20dp"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="500dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <TextView
        android:id="@+id/text_clicked_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:padding="16dp"
        android:text="Bu Zeng Cox vacibdir.Mumkun qeder tecili cavab.\n verin. Imza: Aytaj Dadashova"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/colorUsername"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_activate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Aktiv et"
        android:padding="16dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorDialogText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_change_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_gravity="center"
        android:text="Mətni Dəyiş"
        android:padding="16dp"
        android:textAlignment="center"
        android:textColor="@color/colorDialogText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="İmzanı sil"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="16dp"
        android:textColor="@color/colorDialogText"
        android:textSize="16sp" />


</LinearLayout>
